<h1>Compose</h1>

<form action="/compose" method="post" class = "compose form-group">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="postTitle">
      <small class="form-text text-muted">The text will become the title of the new journel entry</small>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Post</label>
      <textarea class="form-control" rows="3" name = "postBody"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>



